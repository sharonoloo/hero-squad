{{>layout.hbs}}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/heroesList.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Sansita&display=swap" rel="stylesheet">
    <link rel='stylesheet' href='/css/app.css'>
</head>
<body>

    <h1 class="mt-5 text-center">The Squad List</h1>

    {{#if squads}}
        {{#each squads}}
            <div class="container mt-5 w-50 list">
                <ul>
                    <li>Squad Name: {{name}}</li>
                    <li>Max Size: {{maxSize}}</li>
                    <li>Cause: {{cause}}</li>
                </ul>
            </div>
        {{/each}}
        <div class="container offset-md-3 text-center">
            <div class="row mt-5 ">
                <div class="col-md-3">
                    <a href="/squads"><button type="button" class="btn">Add a Squad</button></a>
                </div>
                <div class="col-md-3 mb-1">
                    <a href="/heroes"><button type="button" class="btn">Add Hero</button></a>
                </div>

            </div>
        </div>
    {{else}}
        <p class="mt-5 text-center">No Squads yet!</p>
    {{/if}}
</body>
</html>